<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - Batuhan Güvenlik Kamera Hizmetleri</title>
    <meta name="description" content="kamera, ip kamera, ahd kamera, termal kamera, nvr kayıt cihazı,kars kamera güvenlik hizmetleri">
    <meta name="keywords" content="kamera, ip kamera, ahd kamera, termal kamera, nvr kayıt cihazı,kars kamera güvenlik hizmetleri">

    <!-- Favicons -->
    <link href="~/homepage/img/securitycamera.png" rel="securitycamera">
    <link href="~/homepage/img/securitycamera.png" rel="securitycamera">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Cardo:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="/homepage/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/homepage/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/homepage/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="/homepage/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="/homepage/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Font Avesome -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Main CSS File -->
    <link href="/homepage/assets/css/main.css" rel="stylesheet">

</head>

<body class="index-page">

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid position-relative d-flex align-items-center justify-content-between">

            <a href="index.html" class="logo d-flex align-items-center me-auto me-xl-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1 class="sitename"><img src="/img/securitycamera.png" style="background-color:white" class="rounded-circle" /> Batuhan Güvenlik Kamera Hizmetleri</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="/Home/Index" class="active">Anasayfa<br></a></li>
                    <li><a href="/Home/About">Hakkımızda</a></li>
                    <li><a href="/Home/Galery"><span>Çalışmalarımız</span></a></li>
                    <li><a href="/Home/Services">Hizmetlerimiz</a></li>
                    <li><a href="/Home/Contact">İletişim</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

            <div class="header-social-links">
                <h4 class="alert alert-success"><span>Ücretsiz Keşif : @ViewBag.Phone1</span></h4>
            </div>

        </div>
    </header>

    <main class="main">

        @RenderBody()

    </main>

    <footer id="footer" class="footer">

        <div class="container">
            <div class="copyright text-center ">
                <p>@DateTime.Now.Year ©<span>Copyright</span> <strong class="px-1 sitename">Batuhan Güvenlik Kamera Hizmetleri</strong> <span>Tüm Hakları Saklıdır.</span></p>
            </div>
            <div class="social-links d-flex justify-content-center">
                
            </div>
            <div class="credits">
                <a href="#">Velat BARAN Tarafından Tasarlandı.</a>
            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader">
        <div class="line"></div>
    </div>

    <!-- Vendor JS Files -->
    <script src="/homepage/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/homepage/assets/vendor/php-email-form/validate.js"></script>
    <script src="/homepage/assets/vendor/aos/aos.js"></script>
    <script src="/homepage/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/homepage/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <!-- Main JS File -->
    <script src="/homepage/assets/js/main.js"></script>ipt>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    @await Component.InvokeAsync("NToastNotify")

</body>

</html>