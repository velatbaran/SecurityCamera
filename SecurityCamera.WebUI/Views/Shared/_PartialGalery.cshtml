@model Galery

    <div class="col-xl-3 col-lg-4 col-md-6">
        <div class="gallery-item h-100">
            <img src="/img/galery/@Model.Image1" class="img-fluid" alt="">
            <div class="gallery-links d-flex align-items-center justify-content-center">
                <a href="/img/galery/@Model.Image1" title="@Model.WorkingName" class="glightbox preview-link"><i class="bi bi-arrows-angle-expand"></i></a>
                <a href="/Home/GaleryDetail/@Model.Id" class="details-link"><i class="bi bi-link-45deg"></i></a>
            </div>
        </div>
    </div>
