@model LoginViewModel
@{
    ViewData["Title"] = "Üye Giriş";
    Layout = "_AccountLayout";
}

<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
    }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
</style>

<main class="form-signin w-100 m-auto my-5">

    <form asp-action="SignIn">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Üye Girişi</h1>
        <hr />
        <div class="form-floating">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" />
            <label for="floatingPassword">Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-start my-3">
            <input asp-for="Password" class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
        <button class="btn btn-primary w-100 py-2" type="submit">Giriş</button>
    </form>
    <div class="row">
        <div class="col-12 my-3">
            <a href="/Account/SignUp" class="btn btn-secondary w-100 py-2">Üye Ol</a>
        </div>
        <div class="col-12">
            <a href="/Account/PasswordRenew" class="btn btn-warning w-100 py-2">Şifremi Unuttum</a>
        </div>
        @* <p class="mt-5 mb-3 text-body-secondary">© @DateTime.Now.Year <strong class="px-1 sitename">Batuhan Güvenlik Kamera Sistemleri</strong> <strong>Tüm Hakları Saklıdır</strong></p> *@
    </div>
</main>
