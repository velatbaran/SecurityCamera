@model ServicePriceViewModel

@{
    ViewData["Title"] = "Hizmetler";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-12">
                    <h1>Hizmetlerimiz ve Fiyat Listemiz</h1>
                    <h3 class="mb-0"><span>En iyi güvenlik kamera seti çeşitlerimizi, uygun fiyatlar ihtiyacınıza göre renkli veya normal görüş seçimini sitemizden seçim yaparak iletişime geçebilirsiniz. Set kamera içindeki bütün ekipmanlar 2 yıl değişim garantilidir..</span></h3>
                    <a href="/Home/Contact" class="cta-btn">İletişime Geçin<br></a>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li class="current">Hizmetler ve Fiyatlar</li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->
<!-- Services Section -->
<section id="services" class="services section">

    <div class="container">

        <div class="row gy-4">

            @if (Model is not null || Model.Services.ToList().Count > 0)
            {
                @foreach (var item in Model.Services)
                {
                    <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-item position-relative">
                            <div class="icon"><img src="~/img/securitycamera.png" height="50" /></div>
                            <h4>@item.Title</h4>
                            <p>@item.Description</p>
                        </div>
                    </div>
                    <!-- End Service Item -->
                }
            }
        </div>
    </div>

</section><!-- /Services Section -->
<!-- Pricing Section -->
<section id="pricing" class="pricing section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Fiyat Listemiz</h2>
        <p>Sizler için uygun fiyatları kontrol edin</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 gx-lg-5">

            @if (Model is not null || Model.Prices.ToList().Count > 0)
            {
                @foreach (var item in Model.Prices)
                {
                    <div class="col-lg-6">
                        <div class="pricing-item d-flex justify-content-between">
                            <div class="row">
                                <div class="col-lg-12" align="center">
                                    <h3>@item.Title</h3> <br />
                                    <img src="~/img/price/@item.Image" height="250" class="img-fluid"/>
                                </div>
                                <div class="col-lg-12 mt-4">
                                    <h3 class="text-left">@item.Description</h3> <br />
                                    <h4 class="text-center" style="font-size:30px;">@item.TotalPrice ₺</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End Pricing Item -->
                }
            }

        </div>

    </div>

</section><!-- /Pricing Section -->