@model IEnumerable<Galery>

@{
    ViewData["Title"] = "Çalışmalarımız";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-12">
                    <h1>Çalışmalarımız</h1>
                    <h3 class="mb-0"><span>Müşterilerimiz bizim için işimizin merkezindedir. Onların ihtiyaç ve beklentilerini anlamak ve en doğru çözümleri sunmak önceliğimizdir. Her projede müşteri memnuniyetini sağlamak adına, onların geri bildirimlerini dinleyerek, hizmetlerimizi şekillendiriyoruz..</span></h3>
                    <a href="/Home/Contact" class="cta-btn">İletişime Geçin<br></a>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li class="current">Çalışmalarımız</li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->
<!-- Gallery Section -->
<section id="gallery" class="gallery section">

    <div class="container-fluid" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">

            @if (Model is not null || Model.ToList().Count > 0)
            {
                @foreach (var item in Model)
                {
                    <partial name="_PartialGalery" model="item" />
                }
            }
        </div>

    </div>

</section><!-- /Gallery Section -->