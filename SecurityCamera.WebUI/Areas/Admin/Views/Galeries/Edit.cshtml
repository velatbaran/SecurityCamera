@model Galery

@{
    ViewData["Title"] = "Çalışmayı Güncelle";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="Image1" />
            <input type="hidden" asp-for="Image2" />
            <input type="hidden" asp-for="Image3" />
            <input type="hidden" asp-for="Image4" />
            <input type="hidden" asp-for="Image5" />
            <div class="form-group">
                <label asp-for="WorkingName" class="control-label"></label>
                <input asp-for="WorkingName" class="form-control" />
                <span asp-validation-for="WorkingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="50" rows="20"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image1" class="control-label"></label>
                <input asp-for="Image1" class="form-control" type="file" />
                <span asp-validation-for="Image1" class="text-danger"></span>
                @if (Model.Image1 != null && !string.IsNullOrWhiteSpace(Model.Image1))
                {
                    <img src="/img/galery/@Html.DisplayFor(modelItem => Model.Image1)" height="50" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil1") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="Image2" class="control-label"></label>
                <input asp-for="Image2" class="form-control" type="file" />
                <span asp-validation-for="Image2" class="text-danger"></span>
                @if (Model.Image2 != null && !string.IsNullOrWhiteSpace(Model.Image2))
                {
                    <img src="/img/galery/@Html.DisplayFor(modelItem => Model.Image2)" height="50" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil2") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="Image3" class="control-label"></label>
                <input asp-for="Image3" class="form-control" type="file" />
                <span asp-validation-for="Image3" class="text-danger"></span>
                @if (Model.Image3 != null && !string.IsNullOrWhiteSpace(Model.Image3))
                {
                    <img src="/img/galery/@Html.DisplayFor(modelItem => Model.Image3)" height="50" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil3") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="Image4" class="control-label"></label>
                <input asp-for="Image4" class="form-control" type="file" />
                <span asp-validation-for="Image4" class="text-danger"></span>
                @if (Model.Image4 != null && !string.IsNullOrWhiteSpace(Model.Image4))
                {
                    <img src="/img/galery/@Html.DisplayFor(modelItem => Model.Image4)" height="50" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil4") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="Image5" class="control-label"></label>
                <input asp-for="Image5" class="form-control" type="file" />
                <span asp-validation-for="Image5" class="text-danger"></span>
                @if (Model.Image5 != null && !string.IsNullOrWhiteSpace(Model.Image5))
                {
                    <img src="/img/galery/@Html.DisplayFor(modelItem => Model.Image5)" height="50" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil5") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client" class="control-label"></label>
                <input asp-for="Client" class="form-control" />
                <span asp-validation-for="Client" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingDate" class="control-label"></label>
                <input asp-for="WorkingDate" class="form-control" />
                <span asp-validation-for="WorkingDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

